<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <View
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/separateLineColor" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/personal_settings_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/personal_settings_switch"
            android:layout_marginTop="2dp"/>

        <com.nightonke.jellytogglebutton.JellyToggleButton
            android:id="@+id/personal_settings_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_alignParentRight="true"
            app:jtbJelly="lazy_tremble_head_slim_jim"
            app:jtbLeftBackgroundColor="#D5D5D5"
            app:jtbRightBackgroundColor="#D5D5D5"
            app:jtbLeftThumbColor="#F44336"
            app:jtbRightThumbColor="@color/themeColor"/>
    </RelativeLayout>

</LinearLayout>
