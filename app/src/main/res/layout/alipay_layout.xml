<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alipay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/alipay_logo"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/logo_alipay" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/alipay_logo"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/alipay_logo"
            android:layout_toRightOf="@id/alipay_logo"
            android:textSize="24sp"
            android:textColor="#000"
            android:text="支付宝打赏" />
    </RelativeLayout>

    <com.hanks.htextview.typer.TyperTextView
        android:id="@+id/alipay_text_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10dp"
        app:charIncrease="2"
        app:typerSpeed="80"
        android:text="@string/alipay_hint_text"/>

    <com.deadline.statebutton.StateButton
        android:id="@+id/reward_author_button"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:text="点我就行啦！"

        app:radius="10dp"
        app:animationDuration="200"

        app:normalStrokeColor="@android:color/white"
        app:pressedStrokeColor="@android:color/white"
        app:unableStrokeColor="@android:color/white"

        app:normalTextColor="@android:color/black"
        app:pressedTextColor="@android:color/black"
        app:unableTextColor="@android:color/black"

        app:normalBackgroundColor="#fff"
        app:pressedBackgroundColor="@color/separateLineColor"
        app:unableBackgroundColor="#fff"/>

</LinearLayout>